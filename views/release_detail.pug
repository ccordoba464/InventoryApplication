extends layout

block content
  h1 Title: #{release.title}

  p #[strong Author:]
    a(href=release.author.url) #{release.author.name}
  p #[strong Summary:] #{release.summary}
  p #[strong ISBN:] #{release.isbn}
  p #[strong Genre:]
    each val, index in release.genre
      a(href=val.url) #{val.name}
      if index < release.genre.length - 1
        |,

  div(style='margin-left:20px;margin-top:20px')
    h4 Copies

    each val in release_instances
      hr
      if val.status=='Available'
        p.text-success #{val.status}
      else if val.status=='Maintenance'
        p.text-danger #{val.status}
      else
        p.text-warning #{val.status}
      p #[strong Imprint:] #{val.imprint}
      if val.status!='Available'
        p #[strong Due back:] #{val.due_back}
      p #[strong Id:]
        a(href=val.url) #{val._id}

    else
      p There are no copies of this release in the library.

    hr
    p
      a(href=release.url+'/delete') Delete release
    p
      a(href=release.url+'/update') Update release