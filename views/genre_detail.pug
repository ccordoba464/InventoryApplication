extends layout

block content

  h1 Genre: #{genre.name}
  p #{genre.description}

  div(style='margin-left:20px;margin-top:20px')

    h4 Releases

    dl
      each release in genre_releases
        dt
            a(href=release.url) #{release.name}
        dd !{release.description}

      else
        p This genre has no releases

    p
      a(href=genre.url+'/delete') Delete genre
    p
      a(href=genre.url+'/update') Update genre