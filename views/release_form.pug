extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of release' name='name' required='true' value=(undefined===release ? '' : release.name) )
    div.form-group
      label(for='artist') Artist:
      input#artist.form-control(type='text', placeholder='Artist name' name='artist' required='true' value=(undefined===release ? '' : release.artist) ) 
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='This story is based on...' name='description' value=(undefined===release ? '' : release.description) required='true')
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', placeholder='10.99' name='price' value=(undefined===release ? '' : release.price) required='true')
    div.form-group
      label(for='numStock') Number of Items:
      input#numStock.form-control(type='number', placeholder='1' name='numStock' value=(undefined===release ? '' : release.number_in_stock) required='true')
    div.form-group
      label Genre:
      div
        for genre in genres
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='genre', id=genre._id, value=genre._id, checked=genre.checked )
            label(for=genre._id) #{genre.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
